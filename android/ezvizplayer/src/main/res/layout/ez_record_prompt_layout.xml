<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/play_record_prompt_rl"
   android:layout_width="match_parent"
   android:layout_height="wrap_content" >
   
   <LinearLayout
       android:id="@+id/video_record_ly"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_centerHorizontal="false"
       android:layout_centerVertical="false"
       android:layout_marginRight="15dp"
       android:layout_marginTop="15dp"
       android:background="@drawable/play_video_time_bg"
       android:gravity="center"
       android:visibility="visible" >

       <ImageView
           android:id="@+id/video_record_iv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/play_video_record"
           android:scaleType="fitXY" />

       <TextView
           android:id="@+id/video_record_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="30"
           android:layout_marginRight="10dp"
           android:textColor="@color/white"
           android:textSize="@dimen/realplay_text_size" />
   </LinearLayout>
</RelativeLayout>
